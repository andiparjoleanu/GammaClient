@model GammaClient.ViewModels.LoginVM

@{
    ViewData["Title"] = "Autentificare";
}

<div class="container mt-3 pb-3">
    <h4>Haide să învățăm împreună!</h4>
    <hr class="border-dark"/>
    <div class="row">
        <div class="col-md-4 text-primary">
            <form asp-action="Login" asp-controller="Account">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control border-primary text-primary"/>
                    <span asp-validation-for="UserName" class="text-primary"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control border-primary text-primary" />
                    <span asp-validation-for="Password" class="text-primary"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Autentificare" class="btn btn-outline-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-3 col-lg-4"></div>
        <div class="col-md-5 col-lg-4 d-none d-md-block gamma-container container-bg-responsive"></div>
    </div>

    <p class="error-message">@TempData["TrySignInErrorMessage"]</p>
    <p class="text-primary">Nu ai cont? <a asp-action="Register" asp-controller="Account">Înregistrează-te!</a></p>
</div>

@section Scripts {
    <script src="~/js/styleLoginPage.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
