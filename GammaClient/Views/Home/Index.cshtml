    <div class="container-fluid container-bg-responsive home-student-texting w3-animate-opacity">
        <div class="row p-sm-5"></div>
        <div class="row p-3">
            <div class="col-6 col-md-7"></div>
            <div class="col-6 col-md-5">
                <h3 class="text-dark font-weight-bold">Disponibil pe orice device</h3>
                <h5 class="text-dark">Poți să fii la curent cu tot ce se întâmplă la școala, chiar și de pe mobil</h5>
            </div>
        </div>
        <div class="row p-sm-5"></div>
    </div>
-->

@if (Model.Role == "guest")
{
    <div class="container-fluid container-bg-responsive home-create-account p-5 w3-animate-opacity">
        <h3 class="text-dark font-weight-bold text-center">Conectează-te cu școala ta!</h3>
        <div class="container-fluid p-2 d-flex flex-row justify-content-around">
            <a class="btn btn-dark" asp-action="Login" asp-controller="Account">Autentificare</a>
            <a class="btn btn-dark" asp-action="Register" asp-controller="Account">Înregistrare</a>
        </div>
    </div>

    <script src="~/js/removeNavbarChildren.js"></script>
}
else
{
    <script>
        var popi = document.getElementById("popi");
        
        popi.title = '<span class="text-center d-block">@Model.Username</span>';
        popi.setAttribute("data-content",
            '<!DOCTYPE html><html><p class="text-center">@Model.Name</p>' + 
            '<a href="Account/Logout" class="btn btn-primary text-light">Deconectare</a></html>');
    </script>
}

@section Scripts {
    <script src="~/js/removeNavbarCollapse.js"></script>
}