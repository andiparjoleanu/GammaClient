@model GammaClient.ViewModels.IndexVM
@{
    ViewData["Title"] = "Acasă";
}

@if (Model.Role == "none")
{
    <div class="p-2 bg-light border-bottom text-center position-sticky sticky-top">
        <h6>Contul tău nu este activat! Un administrator îl va activa curând!</h6>
    </div>
}

<div class="container-fluid container-bg-responsive home-students w3-animate-opacity">
    <div class="row p-3" style="height:200px;">
        <div class="col-9"></div>
        <div class="col-3 gamma-container container-bg-responsive w3-animate-zoom"></div>
    </div>
    @{
        for (int i = 0; i < 4; i++)
        {
            <div class="row p-5"></div>
        }
    }
</div>

<div class="container-fluid container-bg-responsive bg-danger">
    <div class="row p-2"></div>
    <div class="row p-3 d-flex flex-column align-items-center">
        <h3 class="text-light font-weight-bold text-center">Învățare interactivă, oriunde, oricând!</h3>
    </div>
    <div class="row p-1"></div>
    <div class="d-flex flex-column flex-sm-row p-3 text-light w3-animate-top">
        <div class="col-0 col-sm-4 p-3 d-flex flex-column align-items-center justify-content-around">
            <i class="far fa-star icon-star lnr lnr-star ion-ios-star-outline text-light" style="font-size:30px;"></i>
            <h4 class="text-center">Școala, altfel</h4>
            <p class="text-center">Platforma noastră încurajează îmbunătățirea sistemului educațional prin crearea unui set de instrumente organizatorice disponibile online</p>
        </div>
        <div class="col-0 col-sm-4 p-3 d-flex flex-column align-items-center justify-content-around">
            <i class="fa fa-home icon-home lnr lnr-home ion-ios-home-outline text-light" style="font-size:30px;"></i>
            <h4 class="text-center">Împreună, suntem mai mulți!</h4>
            <p class="text-center">Gamma este o comunitate online formată din numeroși elevi și profesori din centre educaționale din toată lumea!</p>
        </div>
        <div class="col-0 col-sm-4 p-3 d-flex flex-column align-items-center justify-content-around">
            <i class="fa fa-user icon-user lnr lnr-user ion-ios-contact-outline text-light" style="font-size:30px;"></i>
            <h4 class="text-center">Înregistrare gratuită</h4>
            <p class="text-center">Serviciile Gamma sunt gratis, atât pentru studenți, cât și pentru cadrele didactice</p>
        </div>
    </div>

    <div class="row p-2"></div>
</div>

<div class="container-fluid container-bg-responsive home-girl-studying w3-animate-opacity">
    <div class="row p-sm-5"></div>
    <div class="row p-3">
        <div class="col-6 col-md-7"></div>
        <div class="col-6 col-md-5">
            <h3 class="text-dark font-weight-bold">Nu pierzi nicio lecție!</h3>
            <h5 class="text-dark">Profesorii pot încărca pe platformă suportul de curs, în format digital</h5>
        </div>
    </div>
    <div class="row p-sm-5"></div>
</div>

<div class="container-fluid container-bg-responsive home-girl-writing w3-animate-opacity">
    <div class="row p-sm-5"></div>
    <div class="row p-3">
        <div class="col-6 col-md-5">
            <h3 class="text-light font-weight-bold">Fără carnet de note!</h3>
            <h5 class="text-light">Studenții își pot vedea online notele obținute</h5>
        </div>
        <div class="col-6 col-md-7"></div>
    </div>
    <div class="row p-sm-5"></div>
</div>

